generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Bookmark {
  id        String   @id
  userId    String
  eventId   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId])
  @@index([userId])
}

model Category {
  id            String          @id
  name          String          @unique
  createdAt     DateTime        @default(now())
  updatedAt     DateTime
  EventCategory EventCategory[]
}

model Event {
  id             String          @id
  title          String
  description    String?
  eventDate      DateTime
  startTime      String
  endTime        String?
  venue          String
  address        String?
  location       String?
  detailUrl      String?
  organizationId String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime
  image          String?
  format         EventFormat     @default(OFFLINE)
  difficulty     DifficultyLevel @default(FOR_EVERYONE)
  price          Int             @default(0)
  eventType      EventType       @default(WORKSHOP)
  participantsCount Int          @default(0)  // 参加者数
  Bookmark       Bookmark[]
  Organization   Organization    @relation(fields: [organizationId], references: [id])
  EventCategory  EventCategory[]
  EventGoal      EventGoal[]
  EventSkill     EventSkill[]
  EventSpeaker   EventSpeaker[]

  @@index([organizationId])
}

model EventCategory {
  id         String   @id
  eventId    String
  categoryId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  Category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  Event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@index([eventId])
}

model EventGoal {
  id        String   @id
  goalType  GoalType
  eventId   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model EventSkill {
  id        String   @id
  name      String
  eventId   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model EventSpeaker {
  id        String   @id
  eventId   String
  speakerId String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  Speaker   Speaker  @relation(fields: [speakerId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([speakerId])
}

model Organization {
  id          String   @id
  name        String
  description String?
  website     String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Event       Event[]
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Speaker {
  id           String         @id
  name         String
  occupation   String
  affiliation  String
  bio          String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  EventSpeaker EventSpeaker[]
}

model User {
  id            String     @id
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  lineId        String?    @unique
  stack         String[]
  level         String?
  place         String?
  tag           String[]
  goal          String[]
  affiliation   String?
  Account       Account[]
  Bookmark      Bookmark[]
  Session       Session[]
}

enum DifficultyLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  FOR_EVERYONE
}

enum EventFormat {
  ONLINE
  OFFLINE
  HYBRID
}

enum EventType {
  HACKATHON
  WORKSHOP
  CONTEST
  LIGHTNING_TALK
}

enum GoalType {
  IMPROVE_SKILLS
  EXPERIENCE_TEAM_DEV
  CREATE_PORTFOLIO
}
